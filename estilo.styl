@font-face {
  font-family: "Flaticon";
  src: url("flaticon.eot");
  src: url("flaticon.eot#iefix") format("embedded-opentype"),
  url("flaticon.woff") format("woff"),
  url("flaticon.ttf") format("truetype"),
  url("flaticon.svg") format("svg");
  font-weight: normal;
  font-style: normal;
}
rojito=#e74c3c
azulObscuro=#2c3e50
azulClaro=#3498db
esmeralda=#27ae60
naranja=#f39c12
morado=#9b59b6
blanco=#fff
gris=#95a5a6


body
  background blanco
header
  background azulObscuro
  margin 0
  padding 0
  border-bottom 5px solid naranja
  figure
    background #fff
    width 20%
    display inline-block
    margin 0
    position relative
    &:after
      content ""
      position absolute
      border-top 0px solid red
      border-left 0px solid yellow
      border-right 103px solid transparent
      border-bottom 105px solid #fff
      top 0
      right -103px
    img
      width 80%
      display block
      margin 0 auto
      padding 2%
  h1
    color blanco
    width 65%
    display inline-block
    text-align center
    vertical-align top
    font-family 'Lobster', cursive
h2
  background naranja
  color #fff
  text-align center
  padding 1.5%
div.rooms
  width 80%
  display inline-block
  article
    width 18%
    background azulObscuro
    display inline-block
    color #fff
    margin 2%
    padding 1%
    vertical-align top
    border-radius 10px 0 10px 0
    box-shadow 5px 5px 5px black
    div
      p
        width 40%
        display inline-block
        margin 3px 0
    div.habitacion
      width 50px
      height 50px
      display block
      border-radius 50%
      background blanco
      text-align center
      margin 3% auto
      p
      border 1px solid naranja
      p:after
        content "\e000"
        font-family Flaticon
        font-size 28px
        color azulObscuro
        margin 0
    select
      width 90%
      display block
      margin 2% auto
      border none
      background #fff
      color azulObscuro
      border-radius 5px
      padding 1%
div.statusRooms
  width 18%
  display inline-block
  vertical-align top
